<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="wrap_content"
        android:background="@drawable/splashscreen"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/splashscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splashscreen"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/splashscreen" />

        <ImageView
            android:id="@+id/loginframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/splashscreen"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="@+id/splashscreen"
            app:layout_constraintTop_toTopOf="@+id/splashscreen"
            app:layout_constraintVertical_bias="0.678"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            app:srcCompat="@drawable/mainbackground" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"

            app:layout_constraintBottom_toBottomOf="@+id/splashscreen"
            app:layout_constraintEnd_toEndOf="@+id/splashscreen"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="@+id/splashscreen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.681">

            <Button
                android:id="@+id/buttonGiris"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="#80C45454"
                android:text="Giris Yap"

                android:textSize="11sp"
                app:cornerRadius="30dp" />

            <EditText
                android:id="@+id/editTextAdminNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:ems="10"
                android:hint="Kullanıcı Adı Giriniz (Admin)"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity=""
                android:ems="10"
                android:layout_marginTop="3dp"
                android:maxLength="16"
                android:hint="Sifre Giriniz"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>