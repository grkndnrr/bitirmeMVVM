<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splashscreen"
        tools:context=".RegisterFragment">



        <ImageView
            android:id="@+id/loginframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.678"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            app:srcCompat="@drawable/splashscreen" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="#33838383"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.681">

            <FrameLayout
                android:layout_width="71dp"
                android:layout_height="49dp"
                android:layout_gravity="right"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginRight="15sp">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            >

            <RadioButton
                android:id="@+id/firstSch"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text=" I.Örgün"
                android:textSize="9sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/secondSch"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:text="II.Örgün"
                android:textSize="9sp"

                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>


            </FrameLayout>

            <Button
                android:id="@+id/buttonKayit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"

                android:backgroundTint="#80C45454"
                android:text="Kayıt Oluştur"


                android:textSize="11sp"
                app:cornerRadius="30dp" />

            <EditText
                android:id="@+id/editTextOgrenciNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number"
                android:hint="Öğrenci No Girin"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity=""
                android:ems="10"
                android:layout_marginTop="3dp"
                android:hint="Sifre Giriniz"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />


        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>